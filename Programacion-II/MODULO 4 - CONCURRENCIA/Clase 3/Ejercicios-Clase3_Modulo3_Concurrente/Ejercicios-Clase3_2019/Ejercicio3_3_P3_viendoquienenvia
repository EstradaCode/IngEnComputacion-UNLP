programa Mensaje 
areas
  ciudad : AreaC(1,1,100,100)
robots 
  robot tipo1
  variables
    i,num:numero 
  comenzar
    repetir 30
      mover
      num:= num + 1
    EnviarMensaje(1,robot3)
    EnviarMensaje(num,robot3)
    mover
    mover 
  fin
  
  robot tipo2
  variables
    num:numero 
  comenzar
    mover
    mover
    mover 
    num:=6
    EnviarMensaje(2,robot3)
    EnviarMensaje(num,robot3)
    mover
    mover 
  fin

  robot tipo3
  variables
    aux : numero
  comenzar
    mover
    mover
    mover
    mover
    mover
    repetir 2
      RecibirMensaje(aux,*)
      si aux = 1 
        Informar(aux)
        RecibirMensaje(aux,robot1)
        Informar(aux)
      si aux = 2 
        Informar(aux)
        RecibirMensaje(aux,robot2)
        Informar(aux)
    mover
    mover
  fin   
variables 
  robot1: tipo1
  robot2: tipo2 
  robot3: tipo3
comenzar 
  AsignarArea(robot1,ciudad)
  AsignarArea(robot2,ciudad)
  AsignarArea(robot3,ciudad)
  Iniciar(robot1, 10, 10)
  Iniciar(robot2, 1, 1 ) 
  Iniciar(robot3, 2, 2 ) 

fin

